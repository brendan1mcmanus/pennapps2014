<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3" >

        <TextView
            android:id="@+id/ticker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ticker"
            android:textAppearance="?android:attr/textAppearanceLarge" 
            android:layout_gravity="center"
            android:layout_weight="1"/>
            
        <TextView
            android:id="@+id/currentPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Price"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/socialIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="S Index"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <TextView
        android:id="@+id/companyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6" >

            <TextView
                android:id="@+id/highTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HI"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/highValTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Val"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/ceilingValTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ceiling"
                android:textAppearance="?android:attr/textAppearanceMedium" 
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/openValTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:weightSum="7" >

            <TextView
                android:id="@+id/lowTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LO"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/lowValTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Val"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/floorValTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Floor"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="3" />

            <TextView
                android:id="@+id/closeValTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="2" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/newsfeedListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>
