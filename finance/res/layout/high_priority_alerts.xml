<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Spinner
            android:id="@+id/highPriorityAlertsSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/addHighPriorityAlertBtn"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:onClick="addHighPriorityAlertBtnClicked"
            android:text="+" />

    </LinearLayout>

    <EditText
        android:id="@+id/highPriorityAlertStockValueEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Stock Value"
        android:inputType="number|numberDecimal" >

        <requestFocus />
    </EditText>

    <ListView
        android:id="@+id/highPriorityAlertsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>
